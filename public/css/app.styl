// Imports

@import _normalize
@import _media
@import _colors

// TAGS

html
  font-family "open-sans", Helvetica, Arial, Sans-Serif
  font-size 16px
  height 100%

  @media iphone4
    font-size 14px

  @media iphone5s
    font-size 14px

body
  background-color #eee
  height 100%

  @media iphone4
    background-color #fff

  @media iphone5s
    background-color #fff

a:link, a:visited, a:active
  color color-link
  text-decoration none

a:hover
  text-decoration underline

h1, h2, h3
  margin 0
  padding 0

hr
  border 0
  background #333
  background-image linear-gradient(to right, #ccc, #888, #ccc)
  height 1px
  margin 1.5rem 0

p
  margin 0
  padding 0

// CLASSES

.about
  margin 0 auto
  max-width 600px
  padding 1rem 0 1rem 0

  .photo
    border 1px solid #ccc
    border-radius 0.8rem
    display block
    margin 0 auto
    max-width 300px
    text-align center

    @media iphone4
      max-width 90%

    @media iphone5s
      max-width 90%

  p
    text-align justify
    text-justify inter-word
    padding-top 1rem

.blog
  background-color #fff
  border-left 1px dotted #ccc
  border-right 1px dotted #ccc
  margin 0 auto
  min-height 100%
  max-width 750px
  padding 1rem 3rem 0 3rem

  @media iphone4
    border none
    padding 0
    width 90%

  @media iphone5s
    padding 0
    width 90%

  img
    border 1px solid #ccc
    display block
    margin 1rem auto 1rem auto
    max-width 700px
    border-radius 0.8rem

    @media iphone4
      max-width 100%

    @media iphone5s
      max-width 100%

  p
    padding-top 1rem

  .tumblr-photo
    p:first-child
      text-align center

  .tumblr-title
    text-align center

  .tumblr-subtitle
    text-align center
    padding-bottom 0.5rem
    padding 0

.center
  text-align center

.content
  margin 3.2rem auto 0 auto
  height 100%

.logo
  font-family "corner-store", "Times New Roman", Times, Serif

.nav
  background-color bg-background
  border-bottom 1px solid #000
  list-style none
  margin 0 auto
  max-height 3rem
  padding 0 0 0.2rem 0
  position fixed
  width 100%
  text-align center
  top 0

  li:first-child
    padding-left 1.5rem

  li:nth-child(5)
    padding-left 1rem

  li
    padding 0 1rem 0 1rem
    display inline-block
    vertical-align middle

    @media iphone4
      display none
      padding 0

    @media iphone5s
      display none
      padding 0

    a:link, a:visited, a:active
      color color-nav-link
      text-decoration none

    a:hover
      color color-nav-hover

  li.logo.title
    @media iphone4
      display inline-block
      font-size 1.8rem
      padding-left 2rem

    @media iphone5s
      display inline-block
      font-size 1.8rem
      padding-left 2rem

  li.hamburger
    display none

    @media iphone4
      display inline-block
      float right
      font-size 1.8rem
      padding-top 0.1rem
      padding-right .5rem

    @media iphone5s
      display inline-block
      float right
      font-size 1.8rem
      padding-top 0.1rem
      padding-right .5rem

.nav-mobile
    background-color #fff
    display none
    list-style none
    margin 0 auto
    padding 0
    width 100%
    text-align center

    @media iphone4
      position absolute
      top 3.1rem

    @media iphone5s
      position absolute
      float right

    li:first-child
      border-top none
      margin-top 0

    li
      border-top 1px solid #ccc
      border-botttom 1px solid #ccc
      padding 0.5rem 0

    li:last-child
      border-bottom 1px solid #ccc

.statement
  padding-bottom 1rem
  text-align center

.title
  font-size 2rem
